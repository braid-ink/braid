{
  "mcp_servers": {
    "xero": {
      "path": "mcp_servers/xero/dist/index.js", 
      "env_vars": ["XERO_ACCESS_TOKEN", "XERO_CLIENT_ID", "XERO_CLIENT_SECRET"],
      "required": true,
      "test_tools": ["list-xero-organisations", "list-xero-profit-and-loss"]
    },
    "notion": {
      "path": "mcp_servers/notion/bin/cli.mjs",
      "env_vars": ["NOTION_API_KEY"],
      "required": true,
      "test_tools": ["API-get-users", "API-post-search"]
    }
  },
  "test_timeouts": {
    "connection": 15,
    "tool_call": 45,
    "initialization": 20
  },
  "retry_config": {
    "max_retries": 3,
    "retry_delay": 2
  },
  "performance_config": {
    "iterations": 10,
    "concurrent_connections": 5
  },
  "agent_test_queries": [
    "Hello, can you help me?",
    "What's the current date?",
    "Get financial data for analysis",
    "Create a simple report"
  ]
}