# Core LLM API (Required)
OPENAI_API_KEY=your_openai_key_here

# LangSmith Tracing (Optional but recommended for debugging)
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=financial-forecast-agent-mcp

# Perplexity MCP (Required for market research)
PERPLEXITY_API_KEY=your_perplexity_key_here

# Xero MCP (Required for financial data retrieval)
XERO_ACCESS_TOKEN=your_xero_bearer_token_here
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here

# Notion MCP (Required for forecast report generation)
NOTION_API_KEY=your_notion_integration_token_here

# Notion Configuration for Financial Reports
NOTION_DEFAULT_PAGE_ID=your_default_page_id_for_reports

# Optional: Production MCP server URLs (override local servers)
# MCP_PERPLEXITY_URL=http://perplexity-mcp:3001
# MCP_XERO_URL=http://xero-mcp:3002
# MCP_NOTION_URL=http://notion-mcp:3003

# Financial Forecasting Settings
# DEFAULT_FORECAST_YEARS=5
# DEFAULT_USER_ID=user_123
# FORECAST_CONFIDENCE_LEVEL=80

# Debug and Logging
# DEBUG=true
# LOG_LEVEL=INFO