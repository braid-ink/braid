# Required API Keys
OPENAI_API_KEY=your-openai-api-key

# Optional API Keys (uncomment if using these tools)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# TAVILY_API_KEY=your-tavily-api-key

# Tool-specific API Keys
# LANGCHAIN_API_KEY=your_langsmith_key_here
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=financial-forecast-agent-mcp

# Agent Configuration
# AGENT_MODEL=gpt-4o
# AGENT_TEMPERATURE=0.1

# === MCP Server Configuration ===
# Perplexity MCP (Required for market research)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Xero MCP (Required for financial data retrieval)  
XERO_ACCESS_TOKEN=your-xero-bearer-token
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:8080/callback

# Notion MCP (Required for forecast report generation)
NOTION_API_KEY=your-notion-api-key
NOTION_DEFAULT_PAGE_ID=your-default-page-id-for-reports

# === Application Settings ===
ENVIRONMENT=development
LOG_LEVEL=INFO
DATABASE_PATH=forecast_data.db

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
HEALTH_CHECK_PORT=8000
METRICS_ENABLED=true
# SENTRY_DSN=your-sentry-dsn

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
XERO_RATE_LIMIT_PER_MINUTE=300
PERPLEXITY_RATE_LIMIT_PER_MINUTE=20

# Optional: Production MCP server URLs (override local servers)
# MCP_PERPLEXITY_URL=http://perplexity-mcp:3001
# MCP_XERO_URL=http://xero-mcp:3002
# MCP_NOTION_URL=http://notion-mcp:3003

# Financial Forecasting Settings
DEFAULT_FORECAST_YEARS=5
DEFAULT_USER_ID=user_123
FORECAST_CONFIDENCE_LEVEL=80