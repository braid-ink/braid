{
  "mcp_server": {
    "name": "notion-mcp-server",
    "transport": {
      "type": "stdio"
    },
    "command": ["npx", "-y", "@notionhq/notion-mcp-server"],
    "env": {
      "NOTION_API_KEY": "${NOTION_API_KEY}"
    }
  },
  "docker_config": {
    "image": "node:18-slim",
    "working_dir": "/app",
    "ports": ["3001:3001"],
    "environment": [
      "NOTION_API_KEY=${NOTION_API_KEY}",
      "NODE_ENV=production"
    ],
    "health_check": {
      "test": ["CMD", "curl", "-f", "http://localhost:3001/health"],
      "interval": "30s",
      "timeout": "10s",
      "retries": 3
    },
    "volumes": [
      "./notion-cache:/app/cache"
    ]
  },
  "braid_integration": {
    "tool_prefix": "notion_",
    "resource_namespace": "notion",
    "import_as": "notion_mcp",
    "auto_start": true,
    "dependencies": [
      "@notionhq/notion-mcp-server"
    ]
  }
}