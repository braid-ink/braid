# Mural Content Assistant Environment Configuration
# Copy this file to .env and fill in your actual values

# Mural API Authentication (Required)
# Get these from your Mural developer account at https://developers.mural.co
MURAL_ACCESS_TOKEN=
MURAL_CLIENT_ID=
MURAL_CLIENT_SECRET=

# Default Workspace and Room Settings (Optional but Recommended)
# These provide defaults when users don't specify where to create murals
MURAL_DEFAULT_WORKSPACE_ID=
MURAL_DEFAULT_ROOM_ID=

# OpenAI Configuration (Required for LLM)
# The agent uses OpenAI's GPT models for natural language processing
OPENAI_API_KEY=

# Optional: LangSmith for debugging and observability
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Optional: Sentry for error tracking in production
SENTRY_DSN=your_sentry_dsn_here

# Perplexity MCP (Required for market research)
PERPLEXITY_API_KEY=

# Development Settings
DEBUG=true
LOG_LEVEL=INFO