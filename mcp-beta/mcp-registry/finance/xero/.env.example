# Xero MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Required: Xero Bearer Token
# Get this from your Xero developer account at https://developer.xero.com/
# Your app must have the following scopes:
# - accounting.transactions
# - accounting.contacts  
# - accounting.settings
XERO_BEARER_TOKEN=your-xero-bearer-token-here

# Optional: Node.js Environment
NODE_ENV=production

# Optional: Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Server Port (default: 3004)
PORT=3004

# Optional: Memory Limit for Node.js
NODE_OPTIONS=--max-old-space-size=512

# Optional: Cache Directory
CACHE_DIR=/app/cache

# Optional: Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000