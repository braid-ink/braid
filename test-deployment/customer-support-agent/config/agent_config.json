{
  "agent": {
    "name": "Customer Support Agent",
    "version": "1.0.0",
    "description": "Automated customer support with multi-channel communication and data analytics"
  },
  "mcps": {
    "notion": {
      "enabled": true,
      "config_path": "mcp/notion",
      "tools": [
        "search_pages",
        "create_pages", 
        "update_pages",
        "read_databases",
        "create_database_entries",
        "update_database_entries"
      ]
    },
    "twilio": {
      "enabled": true,
      "config_path": "mcp/twilio",
      "tools": [
        "send_sms",
        "make_call",
        "send_whatsapp",
        "verify_phone"
      ]
    }
  },
  "integrations": {
    "slack": {
      "enabled": true,
      "channels": {
        "support": "customer-support",
        "escalation": "support-escalations"
      },
      "auto_escalation": true
    }
  },
  "workflows": {
    "ticket_classification": {
      "enabled": true,
      "priority_keywords": {
        "critical": ["urgent", "critical", "down", "broken", "emergency"],
        "high": ["billing", "payment", "charge", "refund", "invoice"],
        "medium": ["question", "how to", "help", "support", "feature"],
        "low": ["general", "info", "documentation"]
      }
    },
    "auto_resolution": {
      "enabled": true,
      "knowledge_base_threshold": 0.8,
      "max_attempts": 3
    },
    "escalation": {
      "enabled": true,
      "criteria": {
        "priority": ["critical", "high"],
        "unresolved_time_hours": 2,
        "customer_satisfaction_threshold": 3.0
      }
    }
  },
  "data_sources": {
    "customer_data": {
      "csv_files": ["data/customers.csv", "data/support_history.csv"],
      "refresh_interval_hours": 24
    },
    "knowledge_base": {
      "notion_database_id": "your-kb-database-id",
      "search_enabled": true
    }
  },
  "notifications": {
    "sms": {
      "enabled": true,
      "templates": {
        "ticket_created": "Hi! Your support ticket {ticket_id} has been created. We're working on it!",
        "ticket_resolved": "Great news! Your support ticket {ticket_id} has been resolved. Solution: {solution}"
      }
    },
    "slack": {
      "enabled": true,
      "mention_on_escalation": true
    }
  }
}